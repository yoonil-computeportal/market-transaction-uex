{
  "dashboard": {
    "title": "UEX Payment Processing System - Overview",
    "tags": ["uex", "payments", "kubernetes"],
    "timezone": "browser",
    "schemaVersion": 16,
    "version": 1,
    "refresh": "30s",
    "panels": [
      {
        "id": 1,
        "title": "Service Status",
        "type": "stat",
        "targets": [
          {
            "expr": "up{namespace=\"uex-payments-dev\"}",
            "legendFormat": "{{job}}"
          }
        ],
        "gridPos": {"h": 4, "w": 24, "x": 0, "y": 0}
      },
      {
        "id": 2,
        "title": "CPU Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_cpu_usage_seconds_total{namespace=\"uex-payments-dev\"}[5m])",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 4}
      },
      {
        "id": 3,
        "title": "Memory Usage by Service",
        "type": "graph",
        "targets": [
          {
            "expr": "container_memory_usage_bytes{namespace=\"uex-payments-dev\"}",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 4}
      },
      {
        "id": 4,
        "title": "HTTP Request Rate",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(http_requests_total{namespace=\"uex-payments-dev\"}[5m])",
            "legendFormat": "{{service}} - {{status}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 12}
      },
      {
        "id": 5,
        "title": "HTTP Response Time (95th percentile)",
        "type": "graph",
        "targets": [
          {
            "expr": "histogram_quantile(0.95, rate(http_request_duration_seconds_bucket{namespace=\"uex-payments-dev\"}[5m]))",
            "legendFormat": "{{service}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 12}
      },
      {
        "id": 6,
        "title": "Pod Restarts",
        "type": "graph",
        "targets": [
          {
            "expr": "kube_pod_container_status_restarts_total{namespace=\"uex-payments-dev\"}",
            "legendFormat": "{{pod}}"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 20}
      },
      {
        "id": 7,
        "title": "Database Connections",
        "type": "graph",
        "targets": [
          {
            "expr": "pg_stat_database_numbackends{datname=\"uex_payments\"}",
            "legendFormat": "Active Connections"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 20}
      },
      {
        "id": 8,
        "title": "Redis Memory Usage",
        "type": "graph",
        "targets": [
          {
            "expr": "redis_memory_used_bytes",
            "legendFormat": "Used Memory"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 28}
      },
      {
        "id": 9,
        "title": "Network I/O",
        "type": "graph",
        "targets": [
          {
            "expr": "rate(container_network_receive_bytes_total{namespace=\"uex-payments-dev\"}[5m])",
            "legendFormat": "{{pod}} - receive"
          },
          {
            "expr": "rate(container_network_transmit_bytes_total{namespace=\"uex-payments-dev\"}[5m])",
            "legendFormat": "{{pod}} - transmit"
          }
        ],
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 28}
      },
      {
        "id": 10,
        "title": "UEX Payment Transactions",
        "type": "stat",
        "targets": [
          {
            "expr": "sum(rate(uex_transactions_total[5m]))",
            "legendFormat": "Transactions/sec"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 36}
      },
      {
        "id": 11,
        "title": "UEX Transaction Success Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "sum(rate(uex_transactions_total{status=\"success\"}[5m])) / sum(rate(uex_transactions_total[5m])) * 100",
            "legendFormat": "Success Rate %"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 36}
      },
      {
        "id": 12,
        "title": "Active Payment Sessions",
        "type": "stat",
        "targets": [
          {
            "expr": "uex_active_sessions",
            "legendFormat": "Active Sessions"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 12, "y": 36}
      },
      {
        "id": 13,
        "title": "Error Rate",
        "type": "gauge",
        "targets": [
          {
            "expr": "sum(rate(http_requests_total{status=~\"5..\",namespace=\"uex-payments-dev\"}[5m])) / sum(rate(http_requests_total{namespace=\"uex-payments-dev\"}[5m])) * 100",
            "legendFormat": "Error Rate %"
          }
        ],
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 36}
      }
    ]
  }
}
