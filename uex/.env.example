# ==============================================================================
# UEX Backend Service - Environment Configuration
# ==============================================================================
# Copy this file to .env and fill in your values

# Server Configuration
PORT=3903
NODE_ENV=development

# Database Configuration
DATABASE_URL=sqlite:./dev.db
# For PostgreSQL: postgresql://user:password@localhost:5432/uex_payments

# ==============================================================================
# UEX API Configuration (REQUIRED)
# ==============================================================================

# UEX Swap API Base URL
UEX_SWAP_BASE_URL=https://uexswap.com

# UEX Merchant API Base URL
UEX_MERCHANT_BASE_URL=https://uex.us

# UEX Referral Code (REQUIRED) - Get from: https://uex.us/referrals
# This is required for all swap operations and to earn referral commissions
UEX_REFERRAL_CODE=5drfo01pgq88

# UEX Merchant API Credentials (OPTIONAL)
# Required only for payment link generation
# Apply for merchant access at: https://uex.us/
UEX_CLIENT_ID=
UEX_SECRET_KEY=

# ==============================================================================
# Polling Configuration (OPTIONAL)
# ==============================================================================

# Enable/disable automatic status polling
UEX_POLLING_ENABLED=true

# Polling interval in milliseconds (default: 300000 = 5 minutes)
UEX_POLLING_INTERVAL=300000

# ==============================================================================
# Webhook Configuration (OPTIONAL)
# ==============================================================================

# Your webhook URL for UEX to send status updates
# Must be publicly accessible HTTPS URL
UEX_WEBHOOK_URL=https://yourdomain.com/api/uex/webhook/order-status

# Webhook secret for signature validation (RECOMMENDED)
# Use a random secure string to verify webhooks are from UEX
UEX_WEBHOOK_SECRET=your-random-secure-string-here

# Polling interval for status checks (minutes)
UEX_POLL_INTERVAL_MINUTES=5

# ==============================================================================
# Cache Configuration (OPTIONAL)
# ==============================================================================

# Currency cache TTL in seconds (default: 3600 = 1 hour)
UEX_CURRENCY_CACHE_TTL=3600

# Exchange rate cache TTL in seconds (default: 300 = 5 minutes)
UEX_RATE_CACHE_TTL=300

# Order status cache TTL in seconds (default: 60 = 1 minute)
UEX_ORDER_CACHE_TTL=60

# ==============================================================================
# Logging Configuration
# ==============================================================================

LOG_LEVEL=info
# Options: error, warn, info, debug

# ==============================================================================
# CORS Configuration
# ==============================================================================

CORS_ORIGIN=http://localhost:3000
# For multiple origins: http://localhost:3000,http://localhost:3001

# ==============================================================================
# Rate Limiting
# ==============================================================================

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# ==============================================================================
# Other Service URLs
# ==============================================================================

# Processing Tier URL
PROCESSING_TIER_URL=http://localhost:8900

# Management Tier URL
MANAGEMENT_TIER_URL=http://localhost:9000

# Seller Service URL (for notifications)
SELLER_SERVICE_URL=http://localhost:3004
